<mjml owa="desktop" lang="en/AU">
    <mj-head>
        <mj-breakpoint width="640px" />

        <mj-title>{{ layout__title }}</mj-title>

        <mj-preview>{{ layout__preview }}</mj-preview>

        <mj-raw>
            <meta name="format-detection" content="telephone=no">
            <meta name="format-detection" content="date=no">
            <meta name="format-detection" content="address=no">
            <meta name="format-detection" content="email=no">
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">

        </mj-raw>

        <mj-attributes>
            <mj-all font-family="Montserrat, Arial, sans-serif" font-weight="400" text-align="left" color="inherit" padding="0px" vertical-align="top" align="left" colour="{{ colour_black }}" font-size="16px" line-height="21px" />

            <mj-button line-height="24px" inner-padding="3px 8px" border="1px solid {{ colour__black }}" border-radius="0px" background-color="transparent" />

            <mj-class name="rich-text__button" inner-padding="3px 16px 3px 8px" padding="16px 0px 32px" border="1px solid {{ colour__blue }}" />

            <mj-class name="footer-cell" padding-left="0" padding-top="0px" text-align="center" color="{{ colour__red }}" />

            <mj-class name="address-text" font-family="Montserrat, Arial, sans-serif" font-weight="400" text-align="left" color="inherit" padding="0px" vertical-align="top" align="left" colour="{{ colour_black }}" font-size="16px" line-height="24px" />

            <mj-class name="footer-text" font-family="Montserrat, Arial, sans-serif" font-weight="400" text-align="left" color="inherit" padding="0px" vertical-align="top" align="left" colour="{{ colour_black }}" font-size="12px" line-height="12px" />

        </mj-attributes>

        <mj-style inline="inline">
            html {
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
            color: {{ colour__black }};
            }

            p, font, span, div {
            -webkit-hyphens: none;
            -moz-hyphens: none;
            hyphens: none;
            word-break: keep-all;
            }


            .rich-text .link, .rich-text .link span, .rich-text .link font { color: {{ colour__red }}; }

            .footer-links .link, .footer-links .link span, .footer-links .link font {
            font-size: 16px;
            white-space: nowrap;
            color: {{ colour__red }};
            }

            .right-arrow {
            vertical-align: top;
            width: 24px;
            height: 24px;
            }

            <!-- .rich-text p { 
            margin-bottom: 16px; } -->

            p.footer-text {
            font-size: 12px;
            font-weight: 400;
            line-height: 12px;
            margin-bottom: 20px;
            color: {{ colour__black }};
            }

            .heading-2 {
            font-size: 18px;
            font-weight: 400;
            color: {{ colour__white }};
            }


        </mj-style>
    </mj-head>


    <mj-body width="640px" background-color="{{ colour__background }}">

        {# <mj-section padding-bottom="90px"></mj-section> #}

        <mj-section padding="0px 0px 0px 20px" background-color="{{ colour__blue }}">
            <mj-column width="0px"> </mj-column>

            <mj-group width="580px">
                <mj-column width="50%" padding="30px 0">
                    <mj-image src="https://lagoon.sh/images/Lagoon-Horizontal-Logo-White.svg" width="400px" />
                </mj-column>

                <mj-column width="50%">
                </mj-column>
            </mj-group>

            <mj-column width="0px"></mj-column>
        </mj-section>



        <mj-section padding="30px 20px 20px 20px" background-color="{{ colour__white }}">
            <mj-column width="20px"></mj-column>
            
            <mj-column width="580px">
                <mj-text align="left">

                {% block body %}{% endblock %}
                    
                </mj-text>
            </mj-column>
            <mj-column width="20px"></mj-column>
        </mj-section>

        <mj-section background-color="{{ colour__white }}">
            <mj-column padding="10px 20px 10px 20px">
                <mj-text mj-class="footer-text" css-class="under-footer">
                    <p>Information contained in this email message may be confidential and may also be the subject of legal professional privilege or public interest immunity. Access to this email by anyone else is unauthorised. If you are not the intended recipient, any use, disclosure or copying of this document is unauthorised and may be unlawful.</p>
                </mj-text>
            </mj-column>
        </mj-section>

    </mj-body>
</mjml>