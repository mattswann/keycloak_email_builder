{% import '../partials/macros.twig' as macros %}

{% set assets_root = '' %}

{% set colour__black = '#000000' %}
{% set colour__white = '#ffffff' %}
{% set colour__off_white = '#f5f5f5' %}
{% set colour__grey = '#e9e9e9' %}
{% set colour__red = '#d73131' %}
{% set colour__blue = '#4578E6' %}


{% set colour__background = colour__grey %}


